{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Language and Environment */
    "target": "es2016",
  
    /* Modules */
    "module": "commonjs",                               
    "rootDir": "./src",                                  
    "moduleResolution": "node",                       
    "baseUrl": "./src",                            
    "paths": {},
    "outDir": "./dist",                                   
    "removeComments": true,                          
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "alwaysStrict": true,                            
    "skipLibCheck": true                                
  }
}
